<%= form_with(model: appoinment) do |form| %>
<% if appoinment.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(appoinment.errors.count, "error") %> prohibited this appoinment from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% appoinment.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :date, class: label_class %>
          <%= form.select :subject_id, options_from_collection_for_select( Subject.all, 'id', 'name', selected = appoinment.subject_id), class: label_class %>
      </div>
  <div class="mb-6">
        <%= form.label :details, class: label_class %>
          <%= form.text_area :details, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if appoinment.persisted? %>
<%= link_to "Cancel", appoinment, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", appoinments_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
