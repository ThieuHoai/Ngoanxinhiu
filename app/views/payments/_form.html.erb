<%= form_with(model: payment) do |form| %>
<% if payment.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% payment.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
    <%= form.label :visitor_id, "Visitor" %>
    <%= form.collection_select :visitor_id, Visitor.all, :id, :name, prompt: "Select a Visitor" %>
  </div>

  <div class="mb-6">
        <%= form.label :payment_id, class: label_class %>
          <%= form.text_field :payment_id, placeholder: "Enter Payment ID" %>
      </div>
  <div class="mb-6">
      <%= form.label :visitor_id, class: label_class %>
        <%= form.text_field :visitor_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :amount, class: label_class %>
          <%= form.text_area :amount, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :payment_method, class: label_class %>
          <%= form.text_area :payment_method, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :payment_date, class: label_class %>
          <%= form.date_field :payment_date, class: input_class %>
      </div>
  <div class="mb-6">
      <%= form.label :status, class: label_class %>
        <%= form.text_area :status, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if payment.persisted? %>
<%= link_to "Cancel", payment, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", payments_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
