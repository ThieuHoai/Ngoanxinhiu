<%= form_with(model: animal) do |form| %>
<% if animal.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(animal.errors.count, "error") %> prohibited this animal from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% animal.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :name, class: label_class %>
          <%= form.text_area :name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :species, class: label_class %>
          <%= form.text_area :species, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :characteristic, class: label_class %>
          <%= form.text_area :characteristic, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if animal.persisted? %>
<%= link_to "Cancel", animal, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", animals_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
