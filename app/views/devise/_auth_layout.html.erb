<%
  subtitle ||= ""
  title ||= "" %>
<div class="items-start justify-center block h-full grid-cols-1 gap-4 lg:grid lg:items-center lg:grid-cols-2">
  <div class="relative flex items-center justify-center h-32 overflow-hidden lg:h-screen" style="background-image: url('<%= asset_path('background.jpg') %>'); background-repeat: no-repeat; background-size: cover;">
    <div class="inset-auto z-30 flex items-center justify-center flex-1 w-full h-auto font-sans text-center text-white shadow lg:flex lg:h-screen lg:absolute xl:text-5xl">
      <h1 class="font-semibold text-4xl"></h1>
    </div>
  </div>
  <div>
    <div class="relative z-20 px-6 mx-auto lg:px-12 max-w-lg">

    <% unless title.blank? %>
      <h2 class="mt-[-2rem] mb-6 font-sans text-4xl font-black leading-tight text-center" style="margin-top: 1rem;">Zoo Management</h2>
      <h2 class="mt-[-2rem] mb-6 font-sans text-4xl leading-tight text-center" style="margin-top: 1rem; color: white;">Zoo Management</h2>
    <% end %>

      <div class="mb-4 xl:mt-8">
        <div class="mt-12 mb-4 lg:mt-0">
          <%= link_to "Back", root_path, class: "text-gray-600 underline flex items-center hover:text-gray-700 hover:no-underline" %>
        </div>

        <% unless title.blank? %>
          <h2 class="pt-6 font-sans text-3xl font-black leading-tight"><%= title %></h2>
        <% end %>

        <% unless subtitle.blank? %>
          <p class="text-gray-600 mt-3"><%= subtitle %></p>
        <% end %>
      </div>

      <%= yield %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
